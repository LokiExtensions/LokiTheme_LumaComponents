<script>
    document.addEventListener('alpine:init', () => {
        const elements = [...document.querySelectorAll('[data-js-component="LumaAddToCompare"]')];
        if (!elements) {
            return;
        }

        elements.forEach(element => {
            element.addEventListener('click', (e) => {
                e.preventDefault();

                LokiDataPost(element);
            });
        })
    });
</script>
